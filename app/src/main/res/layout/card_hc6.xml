<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="@dimen/size_12dp"
      app:cardUseCompatPadding="true"
      android:id="@+id/card_view_hc_6"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80dp"
        android:padding="@dimen/size_16dp"
        android:id="@+id/constraint_hc6"
        >

      <ImageView
          android:id="@+id/iv_icon_start"
          android:layout_width="@dimen/size_30dp"
          android:layout_height="@dimen/size_30dp"
          android:scaleType="fitXY"
          android:src="@drawable/ic_baseline_person_24"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <ImageView
          android:id="@+id/iv_icon_end"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_baseline_arrow_forward_ios_24"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/tv_description"
          android:layout_width="@dimen/size_0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_16dp"
          android:gravity="center_vertical"
          android:text="@string/sample_small_card_title"
          android:textSize="@dimen/size_14sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toRightOf="@id/iv_icon_start"
          app:layout_constraintRight_toLeftOf="@id/iv_icon_end"
          app:layout_constraintTop_toBottomOf="@id/tv_title"
          />

      <TextView
          android:id="@+id/tv_title"
          android:layout_width="@dimen/size_0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_16dp"
          android:gravity="center_vertical"
          android:text="@string/sample_small_card_title"
          android:textSize="@dimen/size_14sp"
          app:layout_constraintLeft_toRightOf="@id/iv_icon_start"
          app:layout_constraintRight_toLeftOf="@id/iv_icon_end"
          app:layout_constraintTop_toTopOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </com.google.android.material.card.MaterialCardView>
  <data>

  </data>
</layout>